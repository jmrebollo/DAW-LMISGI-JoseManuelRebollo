{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CIFP Schema",
  "type": "object",
  "properties": {
    "cifp": {
      "type": "object",
      "properties": {
        "alumnes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer"
              },
              "nom": {
                "type": "string"
              },
              "llinatges": {
                "type": "string"
              },
              "data_naixement": {
                "type": "string"
              },
              "correu": {
                "type": "string"
              },
              "telefon": {
                "type": "string"
              },
              "adreca": {
                "type": "string"
              },
              "data_matricula": {
                "type": "string"
              },
              "curs": {
                "type": "string"
              }
            },
            "required": ["id", "nom", "llinatges", "data_matricula", "curs"]
          }
        },
        "professors": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer"
              },
              "nom": {
                "type": "string"
              },
              "llinatges": {
                "type": "string"
              },
              "data_naixement": {
                "type": "string"
              },
              "correu": {
                "type": "string"
              },
              "telefon": {
                "type": "string"
              },
              "adreca": {
                "type": "string"
              },
              "data_incorporacio": {
                "type": "string"
              },
              "departament": {
                "type": "string"
              },
              "assignatures": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id_assignatura": {
                      "type": "integer"
                    },
                    "nom_assignatura": {
                      "type": "string"
                    },
                    "cicle": {
                      "type": "string",
                      "enum": ["DAM", "DAW", "ASIX", "SMX", "SEIA", "ER", "AUT"]
                    },
                    "data_inici": {
                      "type": "string"
                    },
                    "data_final": {
                      "type": "string"
                    }
                  },
                  "required": ["id_assignatura", "nom_assignatura", "cicle"]
                }
              }
            },
            "required": ["id", "nom", "llinatges", "data_incorporacio", "departament"]
          }
        }
      }
    }
  }
}